integrator               = md
nsteps                   = 2500000
dt                       = 0.002

comm-mode                = Linears

nstxout                  = 10000
nstvout                  = 10000
nstenergy                = 1000
nstlog                   = 1000

cutoff-scheme            = Verlet
ns-type                  = grid
nstlist                  = 10
pbc                      = xyz
coulombtype              = {{  cutoff_style  }}
rcoulomb                 = {{  r_cut  }}

vdwtype                  = {{  cutoff_style  }}
rvdw                     = {{  r_cut }}


tcoupl                   = nose-hoover
tc-grps                  = System
tau-t                    = 1.0
ref-t                    = {{ temp }}

pcoupl                   = parrinello-rahman
pcoupltype               = isotropic
nstpcouple               = -1
tau-p                    = 10.0
compressibility          = 4.5e-5
ref-p                    = {{  refp  }}

constraints              = all-bonds
constraints-algorithms   = LINCS
