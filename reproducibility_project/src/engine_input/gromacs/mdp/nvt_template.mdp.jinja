integrator          = md
nsteps              = {{  nsteps  }}
dt                  = {{  dt  }}

comm-mode           = Linear

nstxout             = 10000
nstvout             = 10000
nstenergy           = 1000
nstlog              = 1000

cutoff-scheme       = Verlet
ns_type             = grid
nstlist             = 10
