integrator          = md
nsteps              = 25000000
dt                  = 0.001

comm-mode           = None

nstxout             = 1000
nstvout             = 0
nstenergy           = 1000
nstlog              = 1000

cutoff-scheme       = Verlet
ns_type             = grid
nstlist             = 10
pbc                 = xyz
rcoulomb            = {{ r_cut }}
rvdw                = {{ r_cut  }}

coulombtype         = PME
fourierspacing      = 0.16
ewald-geometry      = 3d

gen_vel             = yes
gen-temp            = {{ temp }}
gen-seed            = 1234

tcoupl              = nose-hoover
tc-grps             = System
tau_t               = 1
ref_t               = {{ temp }}

pcoupl              = no

constraints         = all-bonds all-angles
constraint-algorithm = LINCS LINCS
